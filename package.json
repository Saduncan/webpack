{
  "name": "@stoplight/webpack",
  "version": "0.0.0",
  "description": "Webpack helpers, built on top of webpack-chain.",
  "keywords": [
    "webpack",
    "webpack-chain"
  ],
  "main": "dist/index.js",
  "sideEffects": false,
  "author": "Stoplight <support@stoplight.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/stoplightio/webpack.git"
  },
  "license": "MIT",
  "files": [
    "**/*"
  ],
  "engines": {
    "node": ">=8.3.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p ./tsconfig.build.json && ts-node scripts/post-build-preparation",
    "build.docs": "typedoc --out docs --target es6 --theme minimal --mode file --excludeExternals --excludeNotExported --excludePrivate --excludeProtected src",
    "test": "jest",
    "test.watch": "jest --watch",
    "test.prod": "yarn lint && yarn test --coverage --no-cache",
    "test.update": "yarn test --updateSnapshot",
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts'",
    "format": "tslint --fix src/**/*.ts",
    "commit": "git-cz",
    "release": "semantic-release",
    "release.docs": "ts-node scripts/gh-pages-publish",
    "postpublish": "cp -r dist/package.json ."
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "release": {
    "pkgRoot": "dist",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/",
      "index.ts",
      "types.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  },
  "peerDependencies": {
    "webpack-chain": "5.0.x"
  },
  "dependencies": {
    "@babel/core": "7.1.x",
    "@types/history": "4.7.x",
    "babel-loader": "8.0.x",
    "cache-loader": "1.2.x",
    "clean-webpack-plugin": "0.1.x",
    "connect-history-api-fallback": "1.5.x",
    "copy-webpack-plugin": "4.6.x",
    "cross-env": "5.2.x",
    "css-loader": "1.0.x",
    "fork-ts-checker-webpack-plugin": "0.4.x",
    "html-webpack-plugin": "3.2.x",
    "koa-connect": "2.0.x",
    "monaco-editor-webpack-plugin": "1.5.x",
    "style-loader": "0.23.x",
    "stylus": "0.54.x",
    "stylus-loader": "3.0.x",
    "terser-webpack-plugin": "1.1.x",
    "ts-loader": "5.3.x",
    "tslint": "5.x.x",
    "webpack": "4.23.x",
    "webpack-bugsnag-plugins": "1.2.x",
    "webpack-bundle-analyzer": "3.0.x",
    "webpack-serve": "2.0.x",
    "webpack-serve-waitpage": "1.0.x",
    "webpackbar": "2.6.x",
    "worker-loader": "2.0.x"
  },
  "devDependencies": {
    "@commitlint/cli": "7.x.x",
    "@commitlint/config-conventional": "7.x.x",
    "@semantic-release/commit-analyzer": "6.x.x",
    "@semantic-release/git": "7.x.x",
    "@semantic-release/github": "5.x.x",
    "@semantic-release/npm": "5.x.x",
    "@semantic-release/release-notes-generator": "7.x.x",
    "@types/jest": "23.x.x",
    "@types/lodash": "4.x.x",
    "@types/node": "10.x.x",
    "@types/webpack": "4.x.x",
    "@types/webpack-chain": "4.8.x",
    "commitizen": "3.x.x",
    "cz-conventional-changelog": "2.x.x",
    "husky": "1.x.x",
    "jest": "23.x.x",
    "lint-staged": "8.x.x",
    "rimraf": "2.x.x",
    "semantic-release": "15.x.x",
    "ts-jest": "23.x.x",
    "ts-node": "7.0.x",
    "tslint-config-stoplight": "1.x.x",
    "typedoc": "0.13.x",
    "typescript": "3.1.x",
    "webpack-chain": "5.0.x"
  }
}
